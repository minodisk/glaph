{
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDirs": ["src", "stories"],
    "baseUrl": ".",
    "paths": {
      "@storybook/addon-storyshots": ["./definitions/storybook__addon-storyshots"],
      "@storybook/html": ["./definitions/storybook__html"],
      "babel-plugin-require-context-hook/register": ["./definitions/babel-plugin-require-context-hook__register"]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "scripts"]
}
